{
    "manifest_version": 3,
    "name": "Task Manager",
    "version": "1.0",
    "description": "A simple todo task manager extension",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    }
  }
  